{
	"name": "Hide my name!",
	"version": "1.0",
	"description": "Hide sensitive information when streaming.",
	"manifest_version": 2,
	"permissions": [
		"activeTab",
		"storage"
	],
	"options_page": "options.html",
	"content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["/content_script.js"]
    }],
	"browser_action": {	
		"default_popup": "popup.html"
	}	
}